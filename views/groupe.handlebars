<!DOCTYPE html>
<html>
<head>
    <title>Page de groupe</title>
</head>
<body>
    <h1>Page de groupe</h1>
    <p>Bienvenue sur la page du groupe !</p>
    <div>
        <h2>Membres du groupe</h2>
        <ul>
            {{#each groupMemberships as |membership|}}
                <li>{{membership.user.user_name}} {{membership.user.user_firstname}}</li>
            {{/each}}
        </ul>
        
        <form method="POST" action="/add_user_to_grp/{{group.grp_id}}">
            <label for="user_email">Email de l'utilisateur</label>
            <input type="email" id="user_email" name="user_email" required>
            <button type="submit">Ajouter</button>
        </form>

        {{#if error}}
            <p style="color: red;">{{error}}</p>
        {{/if}}
    </div>

<div>
    <h2>Rappels</h2>
    <ul>
        {{#each group.rappels as |rappel|}}
            <li>{{rappel.contenu}} - {{rappel.date}}</li>
        {{/each}}
    </ul>

    <form method="POST" action="/add_reminder/{{group.grp_id}}">
        <label for="reminder_content">Contenu du rappel</label>
        <input type="text" id="reminder_content" name="reminder_content" required>
        
        <label for="reminder_date">Date du rappel</label>
        <input type="datetime-local" id="reminder_date" name="reminder_date" required>

        <button type="submit">Ajouter Rappel</button>
    </form>
</div>

</body>
</html>

